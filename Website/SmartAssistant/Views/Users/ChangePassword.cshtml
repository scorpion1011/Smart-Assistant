@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@model SmartAssistant.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Изменение пароля";
}
<h2>@Localizer["Change password for user"] @Model.Email</h2>
<form asp-action="ChangePassword" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />

    <div class="form-group">
        <label asp-for="NewPassword" class="control-label">@Localizer["New password"]</label>
        <input type="text" asp-for="NewPassword" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="@Localizer["Save"]" class="btn btn-default" />
    </div>
</form>