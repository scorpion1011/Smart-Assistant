@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@model IEnumerable<SmartAssistant.Models.User>
@{
    ViewBag.Title = "Список пользователей";
}

<a class="btn btn-sm btn-primary" style="margin-top: 15px; margin-bottom: 15px" asp-action="Create">@Localizer["Create new user"]</a>

<table class="table">
    <tr><th>Email</th><th>@Localizer["Year"]</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.Year</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">@Localizer["Edit"]</a>
                    <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">@Localizer["Change password"]</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        @Localizer["Delete"]
                    </button>
                </form>
            </td>
        </tr>
    }
</table>