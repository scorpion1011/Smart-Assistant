@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@model SmartAssistant.ViewModels.AddShopViewModel
@{
    ViewBag.Title = "Додати магазин";
}
<form asp-controller="Shops">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="name" class="control-label">@Localizer["Shop name"]</label>
        <input type="text" asp-for="name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="latitude" class="control-label">@Localizer["Shop latitude"]</label>
        <input type="text" asp-for="latitude" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="longitude" class="control-label">@Localizer["Shop longitude"]</label>
        <input type="text" asp-for="longitude" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="area" class="control-label">@Localizer["Shop area"]</label>
        <input type="text" asp-for="area" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="@Localizer["Add shop"]" class="btn btn-default" />
    </div>
</form>